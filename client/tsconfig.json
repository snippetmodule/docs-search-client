{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "redux",
      "redux-thunk",
      "react-router",
      "react-router-redux",
      "localforage",
      "isomorphic-fetch"
    ],
    "moduleResolution": "node",
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules"
  ]
}